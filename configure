#!/bin/bash

echo ""

checkcmd() {
  echo -n "Checking $1... "
  if hash $1 2>/dev/null; then
    echo "OK"
  else
    echo "Error: $1 not found! Please install it."
    exit 1
  fi
}

checkcmds() {
  for cmd in $@; do
    checkcmd $cmd
  done
}

checkcmds bash gcc nasm ld make source

echo ""
echo "Done."
